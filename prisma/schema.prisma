generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Roadmap {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  upvotes     Int     @default(0)
  badge       String
  selected    Boolean @default(false)
}

model Article {
  id        String   @id @default(cuid()) // Utilisation de cuid() pour générer des IDs uniques
  name      String
  href      String
  md        String
  updatedAt DateTime @updatedAt // Mise à jour automatique de la date et de l'heure

  @@map("articles") // Optionnel : nom de la table dans la base de données
}
